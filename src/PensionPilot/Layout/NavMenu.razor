<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            <img src="favicon.svg" alt="Logo" style="width:28px;height:28px;border-radius:6px;" />
            <span>PensionPilot</span>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Inputs
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="planner">
                <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Results
            </NavLink>
        </div>
    </nav>
